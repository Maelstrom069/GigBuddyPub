<resources>

    <!-- App theme -->
    <style name="Theme.GBTest08" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <!-- For example, change the colorPrimary to cobalt blue -->
        <item name="colorPrimary">@color/cobalt_blue</item>
        <item name="colorPrimaryDark">@color/cobalt_blue_dark</item>
        <item name="colorAccent">@color/cobalt_blue_accent</item>
        <item name="colorOnSecondaryContainer">@color/dark_grey</item>

        <!-- Customize the appearance of EditText elements -->
    </style>

    <!-- Dialog theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">

        <!-- Customize your dialog theme here -->
        <item name="colorPrimary">@color/cobalt_blue</item>
        <item name="colorPrimaryDark">@color/cobalt_blue_dark</item>
        <item name="colorAccent">@color/cobalt_blue_accent</item>

        <!-- Customize the appearance of EditText elements in dialogs -->
    </style>

</resources>
