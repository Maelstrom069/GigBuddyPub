<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gig Buddy!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/currentDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Date"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: First Last"
        android:layout_marginTop="16dp"
        android:gravity="start" />

    <TextView
        android:id="@+id/vehicleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle: Make Model"
        android:gravity="start" />

    <TextView
        android:id="@+id/dayTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Total: $0.00"
        android:gravity="start"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/dayExpensesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Expenses: $0.00"
        android:gravity="start" />

    <TextView
        android:id="@+id/earnedTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earned Total: $0.00"
        android:gravity="start"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/addFuelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Fuel"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/addExpenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/startDayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Day"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/editDayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Day"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


    </LinearLayout>

</LinearLayout>
