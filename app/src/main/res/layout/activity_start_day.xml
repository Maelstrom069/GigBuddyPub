<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Current Date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/selectedGigAppsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentDateTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Selected Gig Apps"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/selectedGigAppsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedGigAppsTextView"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/menuEditAppList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedGigAppsListView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Edit App List" />

    <EditText
        android:id="@+id/startDayOdometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuEditAppList"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Starting Day Odometer"
        android:inputType="number"
        android:minEms="5" />

    <Button
        android:id="@+id/startDayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDayOdometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Start Day" />



</RelativeLayout>
