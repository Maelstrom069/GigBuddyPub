<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Review Your Day"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TableLayout
                android:id="@+id/gigAppTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:stretchColumns="*">

                <!-- Dynamically populated table rows will be added here -->

            </TableLayout>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
            <TextView
                android:id="@+id/expenseAmountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense Amount"
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/expensesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/netTotalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Total"
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/milesDrivenTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miles Driven"
                android:textSize="18sp"
                android:padding="8dp" />



            <Button
                android:id="@+id/editMileageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Mileage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <!-- Add the missing textViewSummary -->


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="24sp" />

</LinearLayout>
